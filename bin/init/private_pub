#!/bin/bash
# Thu Mar 18 11:54:42 CEST 2014
# Phil Hofmann
# Switzerland, Zurich, RocketPark, VoiceRepublic

__pwd="$(pwd -P)"
__mydir="${0%/*}"
__abs_mydir="$(cd "$__mydir" && pwd -P)"
__myname=${0##*/}
__abs_myname="$__abs_mydir/$__myname"

. ~/bin/rbenv_init

export RAILS_ENV=production

bundle='/home/app/.rbenv/shims/bundle'
pidfile="/home/app/app/shared/pids/private_pub.pid"
# private_pub="${bundle} exec rackup private_pub.ru -E production -D -P ${pidfile}"
private_pub="${bundle} exec thin -C config/private_pub_thin.yml start -P ${pidfile} -d"

# Rails is always located below ~/app/current
cd ~/app/current

case $1 in
    start)
	pwd
	echo ${private_pub}
  ${private_pub}
  sleep 2
	cat ${pidfile}
	echo
    ;;
    stop)
        kill `cat ${pidfile}`
    ;;
    restart)
        "$0" stop
        "$0" start
    ;;
    *)
        cat << eof
$0:
    start:          start private_pub and daemonize
    stop:           stop existing private_pub processes
    restart:        stop and start
eof
esac
