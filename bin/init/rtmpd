#!/bin/bash
# Thu Mar 18 11:54:42 CEST 2014
# Phil Hofmann
# Switzerland, Zurich, RocketPark, VoiceRepublic

__pwd="$(pwd -P)"
__mydir="${0%/*}"
__abs_mydir="$(cd "$__mydir" && pwd -P)"
__myname=${0##*/}
__abs_myname="$__abs_mydir/$__myname"

. ~/bin/rbenv_init

export RAILS_ENV=production

bundle='/home/app/.rbenv/shims/bundle'
pidfile="/home/app/app/shared/rtmp/run/logs/nginx.pid"
cmd="${bundle} exec rake rtmp:start"

# Rails is always located below ~/app/current
cd ~/app/current

case $1 in
    start)
	pwd
	echo ${cmd}
        ${cmd}
	cat ${pidfile}
	echo
    ;;
    stop)
        kill `cat ${pidfile}`
    ;;
    restart)
        "$0" stop
        "$0" start
    ;;
    *)
        cat << eof
$0:
    start:          start rtmpd and daemonize
    stop:           stop existing rtmpd processes
    restart:        stop and start
eof
esac
