#!/bin/bash
# Thu Okt 11 12:31:42 CEST 2015
# Phil Hofmann
# Italy, Ronco, VoiceRepublic

__pwd="$(pwd -P)"
__mydir="${0%/*}"
__abs_mydir="$(cd "$__mydir" && pwd -P)"
__myname=${0##*/}
__abs_myname="$__abs_mydir/$__myname"

. ~/bin/rbenv_init

export RAILS_ENV=production

bundle='/home/app/.rbenv/shims/bundle'
pidfile="/home/app/app/shared/tmp/pids/simon_the_slacker.pid"
simon_the_slacker="${bundle} exec lib/simon_the_slacker.rb start -- config/simon_the_slacker.yml"

# Rails is always located below ~/app/current
cd ~/app/current

case $1 in
    start)
	      pwd
	      echo ${simon_the_slacker}
        ${simon_the_slacker}
        sleep 2
	      cat ${pidfile}
	      echo
        ;;
    stop)
        kill `cat ${pidfile}`
        ;;
    restart)
        "$0" stop
        "$0" start
        ;;
    *)
        cat << eof
$0:
    start:          start simon_the_slacker and daemonize
    stop:           stop existing simon_the_slacker processes
    restart:        stop and start
eof
esac
