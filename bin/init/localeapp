#!/bin/bash
# Thu Mar 18 11:54:42 CEST 2014
# Phil Hofmann
# Switzerland, Zurich, RocketPark, VoiceRepublic

__pwd="$(pwd -P)"
__mydir="${0%/*}"
__abs_mydir="$(cd "$__mydir" && pwd -P)"
__myname=${0##*/}
__abs_myname="$__abs_mydir/$__myname"

. ~/bin/rbenv_init

bundle='/home/app/.rbenv/shims/bundle'
pidfile="/home/app/app/shared/tmp/pids/localapp.pid"
private_pub="${bundle} exec localeapp daemon -b"

# Rails is always located below ~/app/current
cd ~/app/current

case $1 in
    start)
	pwd
	echo ${private_pub}
        ${private_pub}
	cat ${pidfile}
	echo
    ;;
    stop)
        kill `cat ${pidfile}`
    ;;
    restart)
        "$0" stop
        "$0" start
    ;;
    *)
        cat << eof
$0:
    start:          start service and daemonize
    stop:           stop existing service processes
    restart:        stop and start
eof
esac
