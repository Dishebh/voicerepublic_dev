.row.clearfix
  %h1.text-center
    = naked_icon "box"
    = t('.streamboxxes')
  - if @devices.empty?
    %div.explain-text.medium-8.medium-offset-2.large-offset-3.columns.large-6 
      %p.text-center= t('.no_boxes').html_safe
  - else
    .medium-6.medium-offset-3.columns
      %ul.menu.vertical.expand.streambox-list
        - @devices.each do |device|
          %li= link_to device.name, device_path(device.identifier)
