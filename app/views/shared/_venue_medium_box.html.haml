- venue = venue_medium_box

%li.venue-medium-box
  = link_to venue, class: 'link-venue' do
    %h4.venue-title= venue.title
    .venue-teaser= venue.teaser
    = image_tag venue.image.thumb("340x104#nw").url
  .action-box
    .black-background-box
      - unless venue.talks.prelive.empty?
        = link_to venue_path(venue, anchor: 'upcoming-talks') do
          = t('.upcoming_talks', count: venue.talks.prelive.count)
      %span.icon-mic        
      - unless venue.talks.archived.empty?
        = link_to venue_path(venue, anchor: 'archived-talks') do
          = t('.archived_talks', count: venue.talks.archived.count)

