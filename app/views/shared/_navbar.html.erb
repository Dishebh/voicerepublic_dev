<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse"> 
				<span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span> 
			</a>

			<%= link_to root_path, :class => "brand", :title => "KluuU-logo", :class => "brand" do %>
				<h1><%= image_tag "KluuU_Logo_Black.png", :alt => "Logo" %></h1>
			<% end %>
			<div class="container-fluid nav-collapse">
				<ul class="nav">
				</ul>
				<ul class="nav pull-right">
					<li>
						<%= link_to new_user_registration_path do %>
						<%# <i class="icon-share-alt"> %> </i> <%= t('.sign_up', :default => 'Sign Up') %>
						<% end %>
					</li>					
					<li class="navbar-search form-search">
						<%= form_tag "/search", :method => 'get', :class => 'navbar-search form-search' do %>
