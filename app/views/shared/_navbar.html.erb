						<% end %>
					</li>
					<li class="nav-google-connect">
						<%= link_to user_omniauth_authorize_path(:google_oauth2) do %>
							<%= image_tag "google-sign-in.png", :alt => t('.sign_in_with_google', :default => "Sign in with Google +") %>
						<% end %>						
					</li>
					<li>
						<%= link_to new_user_session_path do %>
							<%= t('.sign_in', :default => 'Login') %>
