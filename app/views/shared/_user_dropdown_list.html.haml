%ul.dropdown-menu
  %li.menu-item
    = link_to user_path(:id => current_user, :user => { :available => 'online' } ), :method => 'put', :remote => true do
      %span.label.label-success Online
  %li.menu-item
    = link_to user_path(:id => current_user , :type => "submit", :user => { :available => 'busy' } ), :method => 'put', :remote => true do
      %span.label.label-important Busy
  %li.menu-item
    = link_to user_path(:id => current_user , :type => "submit", :user => { :available => 'offline' } ), :method => 'put', :remote => true do
      %span.label.label-attention Offline
  %li
    = link_to(destroy_user_session_path, :method => :delete) do
      %i.icon-off
      = t('.logout')
