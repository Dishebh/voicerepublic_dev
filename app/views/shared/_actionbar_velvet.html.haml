- if current_page?(root_path) && !current_user
  %nav.top-bar{"data-topbar" => "", :role => "navigation"}
    .logo.left
      %span.lp-logo.icon-vr-logo
    .large-4.large-offset-2.columns
      = form_tag "/search", :class => 'navbar-search form-search' do
        .medium-8.medium-offset-3.columns.search-field-holder
          = search_field_tag 'query', params[:query], :class => "topbar-search-field"#, :placeholder => t('.find_a_talk').html_safe#, :required => true
        .medium-2.columns.end.search-btn-holder
          = button_tag :type => "submit", :class => "search-lupe" do
            %span.icon-magnifying-glass
    .right.top-actions
      %span 
        = link_to t('.now_playing'), '#', title: 'Should Link To A Page Of LIVE Talks'
      %span 
        = link_to t('.discover'), explore_path
      %span 
        = link_to t('.sign_in'), new_user_session_path
      %span 
        = link_to t('.join'), new_user_registration_path

- else 
  %nav.top-bar{"data-topbar" => "", :role => "navigation"}
    %ul.title-area
      .logo.left
        = link_to root_path do
          %span.lp-logo.icon-vr-logo
    .large-4.large-offset-2.columns
      = form_tag "/search", :class => 'navbar-search form-search' do
        .medium-8.medium-offset-3.columns.search-field-holder
          = search_field_tag 'query', params[:query], :class => "topbar-search-field"#, :placeholder => t('.find_a_talk').html_safe#, :required => true
        .medium-2.columns.end.search-btn-holder
          = button_tag :type => "submit", :class => "search-lupe" do
            %span.icon-magnifying-glass
    .right.topbar-section
      %ul.right
        %li
          = link_to t('.support'), support_path
        - if !current_user
          %li
            = link_to t('.login'), new_user_session_path, class: "logged-out-link"
          %li
            = link_to t('.sign_up'), new_user_registration_path, class: "logged-out-link"
        - else
          %li.has-dropdown
            %a.user-link(href='#')
              .avatar
                = render partial: "shared/avatar_image", locals: { user: current_user, size: 36 }
              / = current_user.name

            %ul.user-link-dropdown.dropdown
              %li= link_to t('.my_profile'), current_user
              %li= link_to t('.test_talk'), test_talk_path
              %li= link_to t('.schedule_talk'), new_talk_path
              %li= link_to t('.upload_talk'), new_upload_path
              - if !current_user.is_pro?
                %li= link_to t('.pricing'), purchases_path
              %li
                = link_to(destroy_user_session_path, method: :delete) do
                  %i.icon-off
                  = t('.logout')
    %section.top-bar-section
    / Right Nav Section
    %ul.right
      %li.active
        %a{:href => "#"} Right Button Active
      %li.has-dropdown
        %a{:href => "#"} Right Button Dropdown
        %ul.dropdown
          %li
            %a{:href => "#"} First link in dropdown
          %li.active
            %a{:href => "#"} Active link in dropdown




