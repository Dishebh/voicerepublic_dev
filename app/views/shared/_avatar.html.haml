/ .avatar
/   .avatar-box
/     = image_tag @user.avatar.thumb('113x113#nw').url
- img_path = "#{img_size}x#{img_size}#nw"
.avatar
  .avatar-box
    .svgMask
      %svg{baseprofile: "full", height: "100%", version: "1.2", width: "100%"}
        %defs
          %mask#svg-mask-out{maskcontentunits: "userSpaceOnUse", maskunits: "userSpaceOnUse", transform: "scale(1)"}
            %image{height: "100%", width: "100%", "xlink:href" => "/assets/mask_octagon.png"}
          %mask#svg-mask-in{maskcontentunits: "userSpaceOnUse", maskunits: "userSpaceOnUse", transform: "scale(1)"}
            %image{height: "92%", width: "92%", x: "4%", "xlink:href" => "/assets/mask_octagon.png", y: "4%"}
        %rect.avatar-bg{height: "100%", mask: "url(#svg-mask-out)", width: "100%", x: "0", y: "0"}
        %image{height: "100%", mask: "url(#svg-mask-in)", width: "100%", x: "0", "xlink:href" => user.avatar.thumb(img_path).url, y: "0"}