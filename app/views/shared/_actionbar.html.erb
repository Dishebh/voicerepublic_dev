<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container-fluid">
			<a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse"> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </a>
			<%= link_to root_path, :class => "brand", :alt => "KluuU-logo", :class => "brand" do %>
				<%= image_tag "KluuU_Logo_Black.png", :alt => "Logo" %>
			<% end %>
			<div class="container-fluid nav-collapse">
				<ul class="nav">
					<li>
						<%= link_to user_path(:id => current_user) do %>
							<i class="icon-home"> </i> <%= current_user.name %>
						<% end if current_user %>
					</li>
					<li>
						<%= link_to('Dashboard', dashboard_path ) if current_user %>
					</li>
				</ul>
				<ul class="nav pull-right">
					<% if current_user %>
						<% if current_user.is_admin? %>
							<li><%= link_to "admin", admin_dashboard_index_path %></li>
						<% end %>
					<li class="navbar-search form-search">
						<%= form_tag "/search", :method => 'get', :class => 'navbar-search form-search' do %>
						<i class="icon-search"> </i> 
						<%= text_field_tag 'query', nil, :placeholder => t('.enter_search_term', :default => ""), :class => "search-query span2" %>
						<% end %>
				 	</li>
				 	<li>
				 		<%= link_to "/" do %>
				 			<i class="icon-bell"> </i> 
				 			<% unless current_user.notifications.unread.empty? %>
				 				<span class="badge badge-important"><%= current_user.notifications.unread.count %></span>&nbsp;
				 			<% end %>
				 			<%= t('.notifications') %>
				 		<% end %>
				 	</li>
				 	<li>
				 		<%= link_to user_conversations_path(:user_id => current_user) do %>
				 			<i class="icon-envelope"> </i> <%= t('.messages') %>
				 		<% end %>
				 	</li>
					<li>
						<%= link_to destroy_user_session_path, :method => :delete  do %>
							<i class="icon-off"> </i> <%= t('.logout') %>
						<% end %>
					</li>
					<% end %>
				</ul>
			</div><!--/.nav-collapse -->
		</div>
	</div>
</div>
<%= subscribe_to "/notifications/#{current_user.id}" %>