<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
				<span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
			</a>
			
			<%= link_to root_path, :class => "brand", :title => "KluuU-logo", :class => "brand" do %>
				<h1><%= image_tag "KluuU_Logo_Black.png", :alt => "Logo" %></h1>
			<% end %>			
			<div class="container nav-collapse">
				<ul class="nav">
					<li class="actionbar-user">
						<%= link_to user_path(:id => current_user) do %>
							<%= image_tag current_user.account.portrait(:thumb), :alt => current_user.name %> <%= current_user.name %>
						<% end if current_user %>
					</li>
					<li>
						<%= link_to(dashboard_path) do %>
							<i class="icon-home"></i>
							<%= t('.Dashboard', :default => "Dashboard") %>
						<% end  if current_user %>
					</li>
				</ul>
				<ul class="nav pull-right">

					<% if current_user %>
						<% if current_user.is_admin? %>
							<li><%= link_to "admin", admin_dashboard_index_path %></li>
						<% end %>
					<li>
						<%= link_to( t('.+ !KluuU!'), new_user_klu_path( :user_id => current_user, :klu_type => "Kluuu")) %>
					</li>
					<li>
						<%= link_to( t('.+ ?KluuU?'), new_user_klu_path( :user_id => current_user)) %>
					</li>
					<li class="navbar-search form-search">
						<%= form_tag "/search", :method => 'get', :class => 'navbar-search form-search' do %>
						<%= text_field_tag 'query', nil, :placeholder => t('.enter_search_term', :default => ""), :class => "search-query span2" %>
						<i class="icon-search"> </i> 
						<% end %>
				 	</li>
				 	
				 	<li class="dropdown">
				 		<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" id="dLabel" title="<%= t('.notifications', :default => "Notifications") %>">
				 			<i class="icon-bell"></i>
				 			<b class="caret"></b>
				 			<% unless current_user.notifications.unread.empty? %>
				 				<span class="badge badge-important"><%= current_user.notifications.unread.count %></span>&nbsp;
				 			<% end %>
				 		</a>
				 		<%= render(:partial => 'shared/notifications_list') %>
				 	</li>
				 	<li>
				 		<%= link_to(user_conversations_path(:user_id => current_user), :title => t('.messages', :default => "Messages")) do %>
				 			<i class="icon-envelope"> </i>
				 		<% end %>
				 	</li>
					<li>
						<%= link_to(destroy_user_session_path, :method => :delete, :title => t('.logout', :default => "Logout") ) do %>
							<i class="icon-off"> </i>
						<% end %>
					</li>
					<% end %>
				</ul>
			</div><!--/.nav-collapse -->
		</div>
	</div>
</div>
<%= subscribe_to "/notifications/#{current_user.id}" %>