= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|

  .row.top-margin-action-bar
    .medium-10.medium-centered.columns
      = f.input :firstname
      = f.input :lastname
      = f.input :email
      = f.input :conference
      = f.input :password
      = f.input :password_confirmation
      = f.input :accept_terms_of_use, as: :boolean

      %br/
      = f.button :submit, t('.registration_title'), class: 'button-vr'
      %hr/
      = render partial: 'devise/shared/social_network_connects', locals: { action: 'register' }
      .clearfix
      %hr/
      = render(:partial => "/devise/shared/links")
