
<div class="login row-fluid">

  <div class="span6 well well-large pull-right">
    <div class="row-fluid page-header">
      <h2>Log In</h2>
    </div>
    
    <div class="row-fluid">
      <div class="span6">
        <%= render "devise/shared/links" %>
      </div>

      <div class="span6">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    
        <%= devise_error_messages! %>
    
        <div class="control-group">
          <%= f.label :email, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :email, :class => 'text_field' %>
          </div>
        </div>
      
        <div class='control-group'>
          <%= f.label :password, :class => 'control-label' %>
          <div class="controls">
            <%= f.password_field :password, :class => 'password_field' %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class='control-group'>
            <div class="controls">
              <%= f.check_box :remember_me %>
            </div> 
            <%= f.label :remember_me, :class => 'control-label' %>
          </div>
        <% end -%>
      
        <div>
          <%= button_tag "Log In", :name => "Login", :class => 'btn btn-primary pull-right' %>
        </div>
        <% end %>
      </div>

    </div>
  </div>

  <%# Text about signup %>
