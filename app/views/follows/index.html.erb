<%- model_class = Follow -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<div class="row">
	<div class="span6 well well-small">
		<h2><%= t('.my_follower')%></h2>
		<ul class="thumbnails">
			<%= render(:partial => '/follows/follower', :collection => @follower, :as => :follower_relation) %>
		</ul>
	</div>
	<div class="span6 well well-small">
		<h2><%= t('.followed_by_me')%></h2>
		<ul class="thumbnails">
			<%= render(:partial => '/follows/followed', :collection => @followed, :as => :followed_relation) %>
		</ul>
	</div>
</div>
