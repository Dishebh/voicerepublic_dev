<%- model_class = Follow -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:follower_id) %>:</strong></dt>
  <dd><%= @follow.follower_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:followed_id) %>:</strong></dt>
  <dd><%= @follow.followed_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              follows_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_follow_path(@follow), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              follow_path(@follow),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
