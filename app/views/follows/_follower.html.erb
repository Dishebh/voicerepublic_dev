<li class="follower">
	 
	<div class="thumbnail user-thumbnail">
		
		<%# LINK FOR WHOLE THUMBAIL %>
		<%= link_to user_path(:id => follower_relation.followed), :class => "user-thumbnail-link" do %>	
			<%= image_tag(follower_relation.followed.account.portrait.url(:thumb)) %>
			<strong><%= follower_relation.followed.name %></strong>
		<% end %>
			
		<%= link_to( t('.follow_back'), user_create_follow_path(:user_id => follower_relation.follower_id, :followed_id => follower_relation.follower_id ), :method => "post", :class => "btn btn-small" )%>

	</div>
	
</li>
