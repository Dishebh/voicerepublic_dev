- content_for :head do
  %meta{name: 'description', content: s('.meta.description', format: 'raw')}
  %meta{name: 'keywords', content: s('.meta.keywords', format: 'raw')}

.markdown
  %section#claim.dark
    .row.clearfix.center.expanded
      .container.medium-10.medium-offset-1.large-8.large-offset-2.columns
        = s('.text_1')
    .row.clearfix.center
      .medium-12.columns.buttons
        = s('.buttons_1')

  - unless s('.text_2').blank?
    %section.white
      .row.clearfix
        .medium-4.large-6.columns
          = s('.aside_2')
        .medium-8.large-6.columns
          = s('.text_2')
      .row.clearfix
        .medium-8.columns.medium-offset-4.buttons
          = s('.buttons_2')

  - unless s('.text_3').blank?
    %section.white
      .row.clearfix
        .medium-8.large-6.columns
          = s('.text_3')
        .medium-4.large-6.columns.text-right
          = s('.aside_3')
      .row.clearfix
        .medium-12.columns.buttons
          = s('.buttons_3')