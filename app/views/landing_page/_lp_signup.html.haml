%h2.lp-signup-title= raw t(".new_to_kluuu")
= form_for('todo') do |f|
  .control-group
    .controls
      = f.text_field :firstname, :placeholder => t('.firstname'), :class => 'input-block-level'
      = f.text_field :fullname, :placeholder => t('.lastname'), :class => 'input-block-level'
  .control-group
    .controls
      = f.text_field :email, :type => "email", :placeholder => t('.email'), :class => 'input-block-level'
  .control-group
    .controls.right-fixed-box      
      = button_tag t('.register'), :name => "signup_button", :class => 'btn btn-lp-register pull-right'
      .clearfix
  .clearfix

.sessions-or-box
  .sessions-or-overlap= t(".or")
= render(:partial => "/devise/shared/social_network_connects")