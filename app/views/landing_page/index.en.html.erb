<div class="landing-page">

	<div class="row-fluid landing-page-top-row text-align-center">
		<h2 class="text-align-center landing-page-claim">
			<span class="landing-page-claim-bg">
				LET'S TALK
			</span>
		</h2>
		<div class="lead">
			Discuss, consult, teach, help...via live video chat.
		</div>
		<div class="landing-page-search text-align-center">	
				<h2>I'd like to talk about</h2>
				<%= form_tag "/search", :method => 'get', :class => 'form-search landing-page-search-form' do %>
					<%= search_field_tag 'landing_page_query', nil, :placeholder => t('.enter_search_term', :default => ""), :class => "search-query landing-page-query span8" %>
					<%= button_tag :type => 'submit', :class => "landing-page-search-button" do %>
						<i class="icon-search"> </i>						
					<% end %>	
				<% end %>			
		</div>
	</div>

	<div class="row-fluid landing-page-color2 lp-treffpunkt">
		<div class="well well-large clearfix">

			<h2>Rendezvous</h2>
			<div class="span7">
				<div class="hero-unit">
					<h3>Analog photography</h3>
					<h4>Thursdays 6 pm - 8 pm</h4>
					<span class="label">With:</span> <strong>Ole Kretschmann, Photoautomat Berlin and Susanna Kraus, Kamera Imago 1:1</strong><br>

					Analog photography is still alive! At this rendezvous, we exchange our experiences, offer advice, and learn new stuff ourselves.<br>

					Use the keyword <span class="landing-bigger">photo</span> to join in.<br>

				</div>
			</div>
			<div class="span4">
				<% begin %>

				<% if klu = Klu.find(223) %>
					<%= link_to klu_path(:id => klu) do %>
						<%= render(:partial => 'klus/tiny_kluuu', :locals => { :klu => klu }) %>
					<% end %>
				<% end %>

				<% if klu = Klu.find(242) %>
					<%= link_to klu_path(:id => klu) do %>
						<%= render(:partial => 'klus/tiny_kluuu', :locals => { :klu => klu }) %>
					<% end %>
				<% end %>

				<% rescue Exception => e %>
				<% end %>
			</div>
			<div class="clearfix"></div>
			<div class="hero-unit landing-page-joinin">
				<span class="label">Join in:</span> Create a <span class="label label-kluuu">KluuU</span> or a <span class="label label-question">Question</span> with the appropriate tag. In your 'matches' you will see the matching counterparts.
			</div>
		</div>
	</div>

	<div class="row-fluid landing-page-color2 lp-kluuus">
		<div class="span12 well well-large clearfix">
			<h2>KluuUs</h2>
				<%= render(:partial => "klus/medium_kluuu", :collection => @kluuus, :as => 'klu') %>
		</div>
	</div>

	<div class="row-fluid lp-trends-people">
		<div class="span6">
			<div class="well well-large">
				<h2>Trends</h2>
				<%= render(:partial => 'shared/tag_cloud') %>
			</div>
		</div>
		<div class="span6">
			<div class="well well-large clearfix">
				<h2>People</h2>
				<ul class="unstyled">
				<% User.potentially_available.limit(5).order("created_at DESC").each do |user| %>
					<li class="user-small">
						<%= render(:partial => "users/user_small", :locals => {:user => user}) %>
					</li>
				<% end %>
				</ul>
			</div>
		</div>	

	</div>

</div>

