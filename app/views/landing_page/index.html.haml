.row.lp-top-row
  .large-12.columns
    -#
      .lp-search-box
        = form_tag "/search", :class => 'form-search' do
          = search_field_tag 'query', params[:query], :class => "top-bar-search-field", :placeholder => t('.search')
          = button_tag :type => "submit", :class => "search-lupe" do
            %span.icon-magnifying-glass
    - if !current_user || current_user.guest
      .authentication-box.text-center
        %dl.tabs(data-tab="true")
          %dd
            = link_to '#login', 'data-link' => 'login' do
              = t('.login')
          %span.link-delimiter
            &#47;
          %dd.active
            = link_to '#signup', 'data-link' => 'signup' do
              = t('.signup')
        .tabs-content.text-left
          .content#login
            = render 'lp_login', user: @user
          .content.active#signup
            = render 'lp_signup', :user => @user

