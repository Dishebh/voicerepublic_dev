.row.collapse-large-only
  .medium-7.columns
    %h1.headline
      = t('.headline')
    %h2.subheadline
      = t('.subheadline')

  .medium-5.columns
    .authentication-box.text-center
      .link-box
        = link_to t('.login)', '#', 'data-link' => 'login'
        /
        = link_to t('.signup'), '#', 'data-link' => 'signup'
      .lp-signup-box
        = render 'lp_signup', :user => @user
      .lp-login-box
        = render 'lp_login', user: @user

