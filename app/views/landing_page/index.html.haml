- content_for :head do
  = rss_link_tag t('.feed_title')

.title-row(style="background-image: url(/images/landing_page/#{rand(7)}.jpg)")
  .bg
  .row.collapse-large-only
    .medium-12.columns.text-center
      %span.lp-logo.icon-vr-logo
      %h1.headline
        = t('.headline').html_safe
      %button.how-to-button(data-slide-down=".how-to-use-vr-dropdown")
        = t('.how_to_use_vr')
      %h2.subheadline
        = t('.subheadline').html_safe

.about-summary
  .row
    .small-12.columns
      %h3= t('.intro_text')
  .row
    .small-4.columns.text-center
      .summary-box
        = image_tag '/images/illu1.jpg'
        %h4= t('.title_illu_1')
        %p.text-left= t('.text_illu_1')
    .small-4.columns.text-center
      .summary-box
        = image_tag '/images/illu2.jpg'
        %h4= t('.title_illu_2')
        %p.text-left= t('.text_illu_2')
    .small-4.columns.text-center
      .summary-box
        = image_tag '/images/illu3.jpg'
        %h4= t('.title_illu_3')
        %p.text-left= t('.text_illu_3')
%br/
%br/

.upcoming.row.collapse-large-only
  .large-12.columns
    - unless @talks_featured.empty?
      .title-box
        = link_to featured_talks_url do
          %h3= t('.upcoming_title')
      %ul.list-style-type-none
        = render collection: @talks_featured, partial: 'shared/talk_medium_box', :locals => { color: 'box-transparent' }
      = link_to t('.see_all'), featured_talks_url, class: 'see-all-link'

.archive.row.collapse-large-only
  .large-12.columns
    .title-box
      = link_to popular_talks_url do
        %h3= t('.popular')
    %ul.list-style-type-none
      = render collection: @talks_popular, partial: 'shared/talk_small_box', :locals => { color: 'box-grey' }
    = link_to t('.see_all'), popular_talks_url, class: 'see-all-link'

    .title-box
      = link_to recent_talks_url do
        %h3=t('.recent')
    %ul.list-style-type-none
      = render collection: @talks_recent, partial: 'shared/talk_small_box', :locals => { color: 'box-black' }
    = link_to t('.see_all'), recent_talks_url, class: 'see-all-link'

.testimonial

.conference-ad

.partners




