<div class="landing-page">

	<div class="row-fluid landing-page-top-row text-align-center">
		<h2 class="text-align-center landing-page-claim">
			<span class="landing-page-claim-bg">
				KOMM INS GESPRÄCH
			</span>
		</h2>
		<div class="lead">
			Erzähle, diskutiere, berate, unterrichte, helfe… per live Video Chat!
		</div>
		<div class="landing-page-search text-align-center">	
				<h2>Was interessiert Dich?</h2>
				<%= form_tag "/search", :method => 'get', :class => 'form-search landing-page-search-form' do %>
					<%= search_field_tag 'landing_page_query', nil, :placeholder => t('.enter_search_term', :default => ""), :class => "search-query landing-page-query span8" %>
					<%= button_tag :type => 'submit', :class => "landing-page-search-button" do %>
						<i class="icon-search"> </i>						
					<% end %>	
				<% end %>			
		</div>
		<div class="landing-page-bottom-background">
			
		</div>
	</div>

  <div class="row-fluid">	
    <% if Venue.upcoming %>
      <% news_shown = true %>
      <section class="landing-page-venue span8">
  	     <%= render(:partial => 'venues/landing_page_venue') %>
      </section>
      <section class="kblog span4">
        <%= display_latest_articles(1) %>
      </section>
    <% end %>
  </div>
  
  <div class="row-fluid landing-page-color2 lp-kluuus">
    <div class="span8  clearfix">
      <h2>KluuUs</h2>
		  <%= render(:partial => "klus/medium_kluuu", :collection => @kluuus, :as => 'klu') %>
	 </div>
    <% unless news_shown %>
      <section class="span4">
        <%= display_latest_articles(1) %>
      </section>
    <% end %>
  </div>

	<div class="row-fluid lp-trends-people">
		<div class="span6">
			<div class="well well-large">
				<h2>Trends</h2>
				<%= render(:partial => 'shared/tag_cloud') %>
			</div>
		</div>
		<div class="span6">
			<div class="well well-large clearfix">
				<h2>People</h2>
				<ul class="unstyled">
				<% User.potentially_available.limit(5).order("created_at DESC").each do |user| %>
					<li class="user-small">
						<%= render(:partial => "users/user_small", :locals => {:user => user}) %>
					</li>
				<% end %>
				</ul>
			</div>
		</div>	

	</div>

</div>
