- participating = venue.user_attends?(current_user) ? '':' unjoined'
%article{:class => "venue-big block" + participating} 
  -#overall link to venue
  = link_to raw('&nbsp;'), venue_path(venue), :class => "venue-big-bg-link"

  %header.venue-big-header{:class => participating}
    %h2.lp-claim
      Unser Tipp!
    -#venue title
    / %h3.venue-big-title= link_to venue.title, venue_path(venue)

    -#join-button
    .btn-lp-register.pull-right

      - if venue.user != current_user and !venue.user_participates?(current_user)
        = render 'shared/participate_button', :venue => venue

  .row-fluid.venue-big-row
    .span9.venue-big-left      
      -#time and image
      .venue-big-time= l(venue.start_time)
      
      -#event title
      - if !venue.current_event.nil?
        %h4.venue-big-event-title= link_to venue.current_event.title, venue_path(venue)
      -#host link
      %aside.venue-big-host-link
        = link_to user_path(venue.user) do    
          = t('.by') + ' '
          = venue.user.name  
      
      -#venue summery        
      = simple_format( truncate(venue.summary, :length => 200), :class => "venue-big-description")    
    .span3.venue-big-right
      -#venue image
      = link_to venue_path(venue) do
        = image_tag venue.image.url(:medium), :class => "venue-big-image"

  .clearfix