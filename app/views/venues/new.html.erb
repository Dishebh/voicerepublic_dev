<div class="page-header">
	<h2><%= t('.create_new_venue') %></h2>
</div>

<% if current_user.kluuus.empty? %>
<p class="text-warning">
	<%= t('.available_kluuu_prerequisite_for_creating_venue') %> -
	<%= link_to(t('.create_kluuu'), new_user_klu_path(:user_id => current_user, :klu_type => 'Kluuu'), :class => "btn btn-primary")%>
</p>
<% else %>
<div class="row-fluid">
	<%= render :partial => 'form' %>
</div>
<% end %>
