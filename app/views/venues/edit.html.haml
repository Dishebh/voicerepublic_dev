- content_for :title do
  = t('.title', title: @venue.title)

= simple_form_for @venue do |f|
  = render partial: 'fields', locals: { f: f, form_title: t(".edit_venue") }

  .form-save-row.row
    .medium-12.columns
      = link_to t('helpers.links.cancel'), @venue, class: 'button-cancel right'    
      = f.button :submit, class: 'button-save right'
      = link_to t('.delete_venue'), @venue, delete_params
