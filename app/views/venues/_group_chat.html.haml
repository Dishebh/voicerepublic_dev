.group-chat-instance{:id => "group-chat-#{venue.id}"}
  .venue-live-titles= t('.venue_chat')
  %hr.venue-live-chat-hr
  %ul.chat-message.unstyled.scrollable-chat{:id => venue.chat_name}
    / chat-messages to be here. renders chats/_single_chat_message.js.erb
  = render(:partial => 'chats/group_form', :locals => { :venue => venue })

  -# RAISE HAND BUTTON
  - if @venue.user_participates?(current_or_guest_user)
    = link_to '#say', class: 'raise_hand btn',
      data: { note: t('.prepare_mic') } do
      =t('.want_to_say')
      =image_tag ('/assets/raising-icon-white.png')        

