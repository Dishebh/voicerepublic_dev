<%= form_for @venue, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :host_kluuu_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :host_kluuu_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :start_time, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :intro_video, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :intro_video, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                venues_path, :class => 'btn' %>
  </div>
<% end %>
