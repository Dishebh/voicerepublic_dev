<%= form_for @venue, :html => { :class => 'form-horizontal' } do |f| %>

<div class="span6">
	<div class="control-group">

		<%= f.label :title, :class => 'control-label' do %>
		<%= t('.title') %>
		<% end %>
		<div class="controls">
			<%= f.text_field :title, :class => 'text_field' %>
		</div>
	</div>

	<div class="control-group">
		<%= f.label :description, :class => 'control-label' do %>
		<%= t('.description') %>
		<% end %>
		<div class="controls">
			<%= f.text_area :description, :class => 'text_area', :rows => 3 %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :duration, :class => "control-label" do %>
			<%= t('.duration') %>
		<% end %>
		<div class="controls">
			<%= f.select(:duration, Venue::DURATION) %>
		</div>
	</div>
</div>

<div class="span5">
	<div class="control-group">
		<%= f.label :host_kluuu, :class => 'control-label' do %>
		<%= t('.host_kluuu') %>
		<% end %>
		<div class="controls">
			<%= f.select :host_kluuu_id, current_user.kluuus.map {|klu| [klu.title, klu.id] } , :class => 'select_field' %>
		</div>
	</div>

	<%# TODO, dieses Feld als Datum und Zeit selector benÃ¼tzen. %>
	<div class="well">
	  <div id="datetimepicker1" class="input-append date">
	    <input data-format="dd/MM/yyyy hh:mm" placeholder="<%=t('.datepick_placeholder')%>" type="text"></input>
	    <span class="add-on">
	      <i data-time-icon="icon-time" data-date-icon="icon-calendar">
	      </i>
	    </span>
	  </div><br>
	  <span class="help-block"><%=t('.datepick_help')%></span>
	</div>
	<%# TODO END %>

	<div class="control-group" >
		<%= f.label :start_time, :class => 'control-label' do %>
			<%= t('.start_time')%>
		<% end %>
		
		<div class="controls">
			<%= f.datetime_select :start_time, :start_year => Date.today.year %>
		</div>
		
	</div>

	<div class="form-actions">
		<%= f.submit nil, :class => 'btn btn-primary' %>
		<%= link_to t('.cancel', :default => t("helpers.links.cancel")), venues_path, :class => 'btn' %>
	</div>
	
</div>


<% end %>
