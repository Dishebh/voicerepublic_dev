<%= form_for venue, :html => { :class => 'form-horizontal' } do |f| %>
    <%= hidden_field_tag(:renew,1) %>


	<%# TODO, diese inputs als Datum und Zeit selector benÃ¼tzen. %>
	<div class="well">
		<label><%= t('.start_date')%></label>
	  <div id="datepicker" class="input-append date">
	    <input data-format="dd/MM/yyyy" placeholder="<%=t('.datepick_placeholder')%>" type="text"></input>
	    <span class="add-on">
	      <i data-time-icon="icon-time" data-date-icon="icon-calendar">
	      </i>
	    </span>
	  </div><br>
	  <span class="help-block"><%=t('.datepick_help')%></span>
	</div>
	<div class="well">
		<label><%= t('.start_time')%></label>
	  <div id="timepicker" class="input-append date">
	    <input data-format="hh:mm" placeholder="<%=t('.timepick_placeholder')%>" type="text"></input>
	    <span class="add-on">
	      <i data-time-icon="icon-time" data-date-icon="icon-calendar">
	      </i>
	    </span>
	  </div><br>
	  <span class="help-block"><%=t('.timepick_help')%></span>
	</div>	
	<%# TODO END %>


	<div class="control-group" >
		<%= f.label :start_time, :class => 'control-label' do %>
			<%= t('.start_time')%>
		<% end %>
		
		<div class="controls">
			<%= f.datetime_select :start_time, :start_year => Date.today.year %>
		</div>
		

	</div>

	<div class="form-actions">
		<%= f.submit nil, :data => { :confirm => t('venues.edit.confirm_change_date') }, :class => 'btn btn-primary' %>
		<%= link_to t('.cancel', :default => t("helpers.links.cancel")), venue_path(:id => venue), :class => 'btn' %>
	</div>
	
<% end %>
