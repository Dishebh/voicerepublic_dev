- start_time = venue.start_time ? venue.start_time.in_time_zone.strftime("%d/%m/%Y %H:%M") : t('.datepick_placeholder')

= form_for venue do |f|
  = hidden_field_tag(:renew,1)

  -# TODO resolve code duplication in venues/form
  = f.fields_for :events, [venue.events.build] do |ef|
    .control-group
      %label.control-label= t('.event_title')
      .controls
        = ef.text_field :title, :class => "input-block-level" 
    .control-group
      %label.control-label= t('.start_time')
      .controls.input-append.date#datetimepicker
        = ef.text_field :start_time, :id => 'venue_s_date', 'data-format' => "dd/MM/yyyy hh:mm"
        %span.add-on
          %i{"data-date-icon" => "icon-calendar", "data-time-icon" => "icon-time"}
        %br/
        %span.help-block Format: 02/07/1967 17:00
    %noscript
      .control-group
        = f.label :start_time, :class => 'control-label' do
          = t('.start_time')
        .controls
          = f.datetime_select :start_time, :start_year => Date.today.year
    .control-group
      = ef.label :duration, :class => "control-label" do
        = t('.duration')
      .controls
        = ef.select :duration, options_for_select(Event::DURATIONS)
    .control-group
      = ef.label :record, :class => "control-label" do
        = t('.settings')
      .controls
        = ef.label :record, :class => "control-label checkbox" do
          = ef.check_box :record
          = t('.record')           
  %br
  .pull-right.clearfix          
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), venue_path(venue), :class => 'btn'
