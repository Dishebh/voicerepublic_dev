%section.venue-participants
  %header.venue-section-title= t('.participants')
  - link = @venue.users.each do |p|
    .participant-box
      - if @venue.live?
        = link_to link, :target => "_blank", :confirm => "#{t('.leave_venue_popup')}" do
          = render(:partial => 'users/user_small', :locals => { :user => p })
      - else
        = link_to link do
          = render(:partial => 'users/user_small', :locals => { :user => p })

      - if @venue.user == current_user
        .promote-icon +