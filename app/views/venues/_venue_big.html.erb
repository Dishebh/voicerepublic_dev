<article class="venue-big <%= cycle('odd', 'even') %> block">
	<%= link_to raw('&nbsp;'),venue_path(venue), :class => "venue-big-bg-link" %>

	<aside class="venue-time">

		<!-- 		<%# if venue.ongoing? %>
		<span class="label label-attention">
		<%#= t('venues.landing_page_venue.venue_is_in_process')  %>
		</span>
		<%# end %>
		<%# if venue.past? %>
		<span class="label label-info">
		<%#= t('venues.landing_page_venue.venue_is_over')  %>
		</span>
		<%# end %> -->
		<%= l(venue.start_time) %>
	</aside>
	
	<div class="venue-big-content clearfix">

		<div class="pull-left">
			<%= link_to raw('&nbsp;'),venue_path(venue), :class => "venue-big-bg-link" %>
			<%= link_to user_path(venue.host_kluuu.user) do %>
				<%= image_tag venue.host_kluuu.user.account.portrait.url(:large) %>
			<% end %>

			<%= link_to (venue.host_kluuu.user.name + "s " + t('.venue_title')), venue_path(venue) %>
			<br>
			<h3><%= link_to venue.title, venue_path(venue) %></h3>
			<div class="clearfix"></div>
			<%= simple_format( truncate(venue.description, :length => 100)) %>
		</div>

		<div class="pull-right">

			<% if venue.host_kluuu.user != current_user %>
				<% unless  venue.user_participates?(current_user) %>
					<%= link_to venue_join_path(:venue_id => venue.id), :class => "btn btn-venue btn-large pull-right", :method => :post do %>
						<%= t('.join_venue')%>&nbsp;<%= image_tag "coffee_icon_white.png" %>
					<% end %>
				<br />
				<% end %>
			<% else %>
				<%= link_to(venue_path(venue), :class => "btn btn-large btn-venue pull-right", :disabled => current_user ? false : true ) do %>
					<%= t('.go_venue_page') %>&nbsp;<%= image_tag "coffee_icon_white.png" %>
				<% end  %>
			<% end %>
			
			
			<br>
			<%= link_to klu_path(:id => venue.host_kluuu), :class => "pull-right" do %>
				<%= render(:partial => 'klus/tiny_kluuu', :locals => { :klu => venue.host_kluuu})%>
			<% end %>
		</div>
		
	</div>
	
</article>