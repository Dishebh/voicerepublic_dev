= javascript_include_tag 'sencha'

- content_for :title do
  = t('.title')

= simple_form_for([@venue, @talk]) do |f|
  = render partial: "fields", locals: { f: f, form_title: t('.new_talk') }

  .form-save-row.row
    .medium-12.columns
      = link_to t('helpers.links.cancel'), :back, class: 'button-cancel right'
      = f.button :submit, class: 'button-save right'
