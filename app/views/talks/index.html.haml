- content_for :title do
  =t('.explore_talks')

- if @talks
  .row.collapse-large-only.top-margin-action-bar
    .small-12.columns
      .title-box
        %h3= t(".#{action_name}")
      %ul.list-style-type-none
        = render collection: @talks, partial: 'shared/talk_medium_box'
  = will_paginate @talks
- else
  .row.top-margin-action-bar
    .small-12.columns.text-center
      %h2= t('.explore_talks')
  .row.collapse-large-only
    .small-12.columns.text-center
      .title-box
        %h3= t('.now_live')
      %ul.list-style-type-none
        = render collection: @talks_live, partial: 'shared/talk_medium_box'
  %br/
  %br/      
  .row.collapse-large-only.text-center
    .small-4.columns
      .title-box
        %h3= t('.featured')
        = link_to t('.see_all'), featured_talks_url, class: 'see-all-link'     
      %ul.list-style-type-none
        = render collection: @talks_featured, partial: 'shared/talk_medium_box'
      = link_to t('.see_all'), featured_talks_url, class: 'see-all-link'

    .small-4.columns
      .title-box
        %h3=t('.popular')
        = link_to t('.see_all'), popular_talks_url, class: 'see-all-link'
      %ul.list-style-type-none
        = render collection: @talks_popular, partial: 'shared/talk_medium_box'
      = link_to t('.see_all'), popular_talks_url, class: 'see-all-link'

    .small-4.columns
      .title-box
        %h3=t('.recent')
        = link_to t('.see_all'), recent_talks_url, class: 'see-all-link'
      %ul.list-style-type-none
        = render collection: @talks_recent, partial: 'shared/talk_medium_box'
      = link_to t('.see_all'), recent_talks_url, class: 'see-all-link'