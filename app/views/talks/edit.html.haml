= simple_form_for([@venue, @talk], input_html: { class: 'vr-form'}) do |f|
	= render partial: "fields", locals: { f: f, form_title: t('.edit_talk') }

	.form-save-row.row.collapsed
		.medium-12.columns  
			= f.button :submit
			= link_to t('.cancel'), [@venue, @talk]
			= link_to t('.delete_talk'), [@venue, @talk], delete_params
