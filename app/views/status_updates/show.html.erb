<%- model_class = StatusUpdate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= @status_update.content %></dd>
</dl>
<!-- hier das partial -->
<%= render(:partial => 'status_update', :locals => {:status_update => @status_update})%>

<%= render(:partial => "comment", :collection => @status_update.comments ) %>

<% @comment = @status_update.comments.build %>
<%= render(:partial => "comments/form") if current_user %>

<div class="form-actions">
	<!-- hack - display CRUD if current_user -->
	<% if current_user %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              user_status_updates_path(:user_id => current_user), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_status_update_path(:user_id => current_user, :id => @status_update.id), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_status_update_path(:user_id => current_user, :id => @status_update.id),
              :method => 'delete', 
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
   <% end %>
</div>
