<%- model_class = StatusUpdate -%>
<section class="status-site status-updates">
	<% if @user == current_user %>
		<aside class="status-new-link clearfix">
			<%= link_to t('._new_status_update'), new_user_status_update_path, :class => 'btn icon-edit' %>		
		</aside>
	<% end %>
	<ul class="unstyled status-list">
		<% @status_updates.each do |status_update| %>
			<li class="status-single">
				<%= render(:partial => "status_updates/status_update", :locals => {:status_update => status_update}) %>
			</li>
		<% end %>	
	</ul>
</section>