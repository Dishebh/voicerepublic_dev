<%- model_class = CheckInOrder -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:credit_account_id) %></th>
      <th><%= model_class.human_attribute_name(:completed) %></th>
      <th><%= model_class.human_attribute_name(:completed_at) %></th>
      <th><%= model_class.human_attribute_name(:currency) %></th>
      <th><%= model_class.human_attribute_name(:amount_cents) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @check_in_orders.each do |check_in_order| %>
      <tr>
        <td><%= link_to check_in_order.id, balance_check_in_order_path(check_in_order) %></td>
        <td><%= check_in_order.credit_account_id %></td>
        <td><%= check_in_order.completed %></td>
        <td><%= check_in_order.completed_at %></td>
        <td><%= check_in_order.currency %></td>
        <td><%= check_in_order.amount_cents %></td>
        <td><%=l check_in_order.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_balance_check_in_order_path(check_in_order), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      balance_check_in_order_path(check_in_order),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_balance_check_in_order_path,
            :class => 'btn btn-primary' %>
