%article.contribution.clearfix{:id => "notification-#{notification.id}"}
  .contribution-left
    - if notification.other && notification.other.instance_of?(User)
      = link_to user_path(:id => notification.other) do
        = image_tag( notification.other.account.portrait.url(:thumb), :class => 'img-polaroid')
    - if notification.other && notification.other.instance_of?(Venue)
      = link_to user_path(:id => notification.other) do
        -#= image_tag( notification.other.account.portrait.url(:thumb), :class => 'img-polaroid')

  .contribution-right
    - if notification.instance_of?(Notification::NewComment)
      = link_to notification.other.name, user_path(:id => notification.other)
      = t('.commented_your_status')
      \:
      = link_to_url_for_notification_reason(notification) do
        = limit_words(notification.content, 15)
    - if notification.instance_of?(Notification::NewFollower)
      = link_to notification.other.name, user_path(:id => notification.other)
      = t('.follows_you_now')
      - if current_or_guest_user.followed.include?(notification.other)
        = link_to(t('.unfollow'), user_follow_path(:user_id => current_or_guest_user, :id => current_or_guest_user.followed_relations.where(:followed_id => notification.other).first), :class => "btn news-follow-reaction", :method => :delete)
      - else
        = link_to user_create_follow_path(:user_id => current_or_guest_user, :followed_id => notification.other ), :method => "post", :class => "btn news-follow-reaction" do
          =t('.follow_back')
    - if notification.instance_of?(Notification::NewVenueParticipant)
      = link_to venue_path(:id => notification.other) do
        -# =>= notification.venues.user.name
      = t('.joined_venue', :title => '"' + notification.other.title + '"')
    - if notification.instance_of?(Notification::VenueInfo)
      = t('venues.date_changed')
      = link_to venue_path(:id => notification.other) do
        \' = notification \'
    %time
      = time_ago_in_words(notification.created_at)

    .contribution-actions
      - if can? :manage, notification
        = link_to delete_notification_path(:notification_id => notification), :method => :delete, :remote => true do
          = t('helpers.links.destroy')
