<article class="span7 medium-kluuu kluuu-layout kluuu">
	<%= link_to( user_klu_path(:user_id => medium_kluuu.user, :id => medium_kluuu)) do %>
		<h3><%= medium_kluuu.title %> </h3>	
		<%= image_tag(medium_kluuu.klu_images.first.image.url(:medium)) unless medium_kluuu.klu_images.empty? %>
		
			<%= simple_format(medium_kluuu.description) %>
	
			<div class="button">
				<%= link_to(medium_kluuu.user.name, user_path(:id => medium_kluuu.user) )%> 
				
				<%= t('.call_now') %>
				<p>Preis</p><!-- TODO: Preis einfÃ¼gen/evtl Fallunertscheidung -->
				<%= medium_kluuu.available_at_times %>
				<%= link_to(image_tag( medium_kluuu.user.account.portrait.url(:thumb), :class => ""), user_path(:id => medium_kluuu.user) ) %>
			</div>
			<strong><%= t('.availability') %>:</strong> 
			<form action="#"><button>Anrufen</button></form>
	<% end %>
</article>