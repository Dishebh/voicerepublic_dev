<article class="medium-klu klu-layout kluuu">
	<div class="klu-bookmark-link"><%= bookmark_links(current_user, klu) %></div>
	
	<%= link_to( klu_path(:id => klu)) do %>
		<h3 class="no-margin"><%= klu.title %> </h3>
		<div class="klu-eyecatcher"><%= image_tag(klu.klu_images.first.image.url(:medium)) unless klu.klu_images.empty? %></div>
		<section class="kluuu-description"><div class="table-cell"><%= simple_format(klu.description) %></div></section>
	<% end %>
	<aside class="klu-overall-rating">
					<%= overall_rating_stars(klu) %>
			</aside>
	<div class="call-btn Mattis Pharetra Euismod Dapibus Vulputate btn">
		<div class="klu-call-btn-text">
			<%= link_to(klu.user.name, user_path(:id => klu.user) )%>
			<form action="#"><button class="btn"><%= t('.call_now') %></button></form>
		</div>
		<dl>
			<dt><%= t('.price') %></dt>
			<dd><%= klu.charge_amount %> â‚¬</dd>
			<dt><%= t('.availability') %></dt>
			<dd><%= klu.available_at_times %></dd>
		</dl>
		<%= link_to(image_tag( klu.user.account.portrait.url(:thumb), :class => "img-polaroid"), user_path(:id => klu.user), :class => 'klu-user-image' ) %>
	</div>
</article>