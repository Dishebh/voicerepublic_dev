<article class="no-kluuu klu-large">
	<div class="klu-layout">
		<div class="row-fluid">
			<div class="span8">
				<h2 class="klu-eyecatcher kluuu-title"><%= @klu.title %></h2>
				<aside class="klu-meta clearfix">
				<ul class="klu-categories">
					<li>
						<%= @klu.category_id %>
					</li>
				</ul>
					<ul class="klu-tags">
						<% @klu.tags.each do |tag| %>
							<li><%= link_to(tag.name,tagged_with_path(:tag => tag.name) , :class => 'tags') %></li>
						<% end %>
					</ul>
					<%= @klu.bookmarks.count %> <%= t('.people') %> <%= t('.bookmarked_this_kluuu') %>
					<ul class="unstyled klu-bookmarked-by">
						<% @klu.bookmarks.each do |b|%>
							<li>
								<%= link_to(user_path(:id => b.user) ) do %>
									<%= image_tag(b.user.account.portrait(:thumb), :class => "img-polaroid") if b.user.account.portrait.exists? %><%= b.user.firstname %>
								<% end %>
							</li>
						<% end %>
					</ul>
				</aside>
			</div>
			<aside class="klu-user-info span4">
				<div class="call-btn jqrfd btn">
					<%= link_to(@klu.user.name, user_path(:id => @klu.user) )%>
					<form action="#"><button class="btn"><%= t('.call_now') %></button></form>
					<dl>
						<dt><%= t('.price') %></dt>
						<dd><%= @klu.charge_amount %> â‚¬</dd>
						<dt><%= t('.availability') %></dt>
						<dd><%= @klu.available_at_times %></dd>
					</dl>
					<%= link_to(image_tag( @klu.user.account.portrait.url(:thumb), :class => "img-polaroid"), user_path(:id => @klu.user), :class => 'klu-user-image' ) %>
				</div><!-- End of call-btn -->
				<div>
					<%= limit_words(@klu.status_or_about, 15) %>
				</div>
				ACTIVITY_SCORE <br>
				
				<%= link_to(new_message_path(:receiver_id => @user)) do %>
					<i class="icon-envelope"> </i> <%= t('.send_message') %>
				<% end if current_user %>
				
				<% if current_user && current_user.id != @user.id %>
					<% if current_user.followed.include?(@klu.user) %>
						<%= link_to(t('.unfollow'), user_follow_path(:user_id => current_user, :id => current_user.followed_relations.where(:followed_id => @klu.user).first), :class => "btn btn-small", :method => :delete) %>
					<% else %>
						<%= link_to( t('.follow'), user_create_follow_path(:user_id => current_user, :followed_id => @user ), :method => "post", :class => "btn btn-small" )%>
					<% end %>
				<% end %>
				
				<%= link_to(t('.more_klus_by_this_user'), user_klus_path(:user_id => @user) ) %>
				
			</aside>
		</div>
	</div><!-- End of Kluu-header kly-layout-->
	<aside class="klu-top-bar">
		<ul class="klu-actions">
			<li>
				<%= bookmark_links(current_user, @klu) %>
			</li>
			<% if can? :manage, @klu %>
				<li>
					<%= link_to edit_user_klu_path(:user_id => @klu.user, :id => @klu) do %>
						<i class="icon-pencil"> </i>
						<%= t('.edit', :default => t("helpers.links.edit")) %>
					<% end %>
				</li>
				<li>
					<%= link_to user_klu_path(:user_id => @klu.user, :id => @klu),
						:method => 'delete',
						:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
						:class => '' do %>
						<i class="icon-trash"> </i>
						<%= t('.delete', :default => t("helpers.links.destroy")) %>
					<% end %>
				</li>
			<% end %>
			</li>
		</ul>
		<ul class="klu-socials">
			<li>Hier Social Foo-Bar</li>
		</ul>
	</aside>
</article>



<% if can? :manage, @klu %>
<div class="form-actions">
	<%= link_to( t('.add_image'), new_user_klu_klu_image_path(:user_id => @klu.user, :klu_id => @klu), :class => "btn") if @klu.instance_of?(Kluuu) %>
	<%= link_to t('.back', :default => t("helpers.links.back")),
	user_klus_path(:user_id => @klu.user ), :class => 'btn'  %>
	<%= link_to t('.edit', :default => t("helpers.links.edit")),
	edit_user_klu_path(:user_id => @klu.user, :id => @klu), :class => 'btn' %>
	<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	user_klu_path(:user_id => @klu.user, :id => @klu),
	:method => 'delete',
	:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	:class => 'btn btn-danger' %>
</div>
<% end %>
