<article class="no-kluuu large-klu">
	<div class="row-fluid">
		<div class="klu-layout span9">
			<div class="row-fluid">
				<div class="span8">
					<h2 class="klu-eyecatcher klu-title"><%= @klu.title %></h2>
				</div>
				<%= render(:partial => "kluuu_user", :locals => {:klu => klu}) %>
			</div>
		</div>

		<%= render(:partial => 'kluuu_top_actions', :locals => {:klu => klu}) %>

		<aside class="klu-matches span3">
			<div class="well">
				<h4><span class="badge badge-info">Tip: </span>&nbsp; <%= t('.Menschen_die_sich_auskennen_mit') %></h4>
				<p class="text-info">
					<strong><%= @klu.title %>:</strong>
				</p>
			</div>
			<%= render(:partial => 'matches', :locals => {:klu => @klu }) %>
		</aside>
	</div><!-- End of klu-layout-->

	<div class="large-klu-left row-fluid">
	<h4> <%= t('.this_kluuu_is_bookmarked') %> <%= @klu.bookmarks.count %> <%= t('.times') %> </h4>
		<ul class="unstyled">		
			<% @klu.bookmarks.each do |b|%>
			<li>
				<%= link_to(user_path(:id => b.user), :title => b.user.name ) do %>
				<div class="user-image" data-user-id="<%= b.user.id %>"><%= image_tag(b.user.account.portrait(:thumb), :class => "img-polaroid", :alt => b.user.name ) %></div>
				<% end %>
			</li>
			<% end %>
		</ul>
	</div>
</article>

<% if can? :manage, @klu %>
<div class="form-actions">
	<%= link_to( t('.add_image'), new_user_klu_klu_image_path(:user_id => @klu.user, :klu_id => @klu), :class => "btn") if @klu.instance_of?(Kluuu) %>
	<%= link_to t('.back', :default => t("helpers.links.back")),
	user_klus_path(:user_id => @klu.user ), :class => 'btn'  %>
	<%= link_to t('.edit', :default => t("helpers.links.edit")),
	edit_user_klu_path(:user_id => @klu.user, :id => @klu), :class => 'btn' %>
	<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	user_klu_path(:user_id => @klu.user, :id => @klu),
	:method => 'delete',
	:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	:class => 'btn btn-danger' %>
</div>
<% end %>
