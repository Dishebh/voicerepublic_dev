<%- model_class = Klu -%>
<div class="page-header">
	<h1><%= @klu.instance_of?(Kluuu) ? "Kluuu" : "NoKluuu" %></h1>
</div>

<dl class="dl-horizontal">
	<dt>
		<strong><%= model_class.human_attribute_name(:title) %>:</strong>
	</dt>
	<dd>
		<%= @klu.title %>
	</dd>
	<dt>
		<strong><%= model_class.human_attribute_name(:description) %>:</strong>
	</dt>
	<dd>
		<%= @klu.description %>
	</dd>
	<dt>
		<strong><%= model_class.human_attribute_name(:available_at_times) %>:</strong>
	</dt>
	<dd>
		<%= @klu.available_at_times %>
	</dd>
	<dt>
		<strong><%= model_class.human_attribute_name(:user_id) %>:</strong>
	</dt>
	<dd>
		<%= @klu.user_id %>
	</dd>
	<dt>
		<strong><%= model_class.human_attribute_name(:published) %>:</strong>
	</dt>
	<dd>
		<%= @klu.published %>
	</dd>
	<dt>
		<strong><%= model_class.human_attribute_name(:category_id) %>:</strong>
	</dt>
	<dd>
		<%= @klu.category_id %>
	</dd>
	<dt>
		<strong><%= model_class.human_attribute_name(:type) %>:</strong>
	</dt>
	<dd>
		<%= @klu.type %>
	</dd>
</dl>

<% if @klu.instance_of?(Kluuu) %>
<div class="well well-large ">
	<ul class="thumbnails">
		<% @klu.klu_images.each do |ki| %>
		<li class="span4">
			<%= link_to user_klu_klu_image_path(:user_id => @klu.user, :klu_id => @klu, :id => ki) do %>
				<p><%= simple_format( ki.description ) %></p>
				<%= image_tag(ki.image.url(:thumb), :class => "img-polaroid") %>&nbsp;
			<% end %>
			<%= link_to t('.destroy_image'), user_klu_klu_image_path(:user_id => @klu.user, :klu_id => @klu, :id => ki), :class => "btn"%>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="form-actions">
	
	<%= link_to( t('.add_image'), new_user_klu_klu_image_path(:user_id => @klu.user, :klu_id => @klu), :class => "btn") if @klu.instance_of?(Kluuu) %>
	<%= link_to t('.back', :default => t("helpers.links.back")),
	user_klus_path(:user_id => @klu.user ), :class => 'btn'  %>
	<%= link_to t('.edit', :default => t("helpers.links.edit")),
	edit_user_klu_path(:user_id => @klu.user, :id => @klu), :class => 'btn' %>
	<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	user_klu_path(:user_id => @klu.user, :id => @klu),
	:method => 'delete',
	:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	:class => 'btn btn-danger' %>
</div>
