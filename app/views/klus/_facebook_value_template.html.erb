<meta property="fb:app_id" content="317175341661486" />
<% if klu.instance_of?(NoKluuu) %>
	<meta property="og:title" content="<%= t('.talk_on_kluuu_about', :name => klu.user.name, :subject => klu.title) %>" /> 
	<meta property="og:description" content="<%= klu.title %>" />  
	<meta property="og:image" content="/images/medium/missing.png" /> 
	<link rel="image_src" href="/images/medium/missing.png" />
<% else %>
	<meta property="og:title" content="<%= t('.talk_on_kluuu_about', :name => klu.user.name, :subject => klu.title) %>" /> 
	<meta property="og:description" content=" <%= klu.description %> " />  
	<% if klu.klu_images.empty? %>
		<meta property="og:image" content="/images/medium/missing.png" /> 
		<link rel="image_src" href="/images/medium/missing.png" />
	<% else %>
		<meta property="og:image" content="<%= 'http://'+ request.host +  klu.klu_images.first.image.url(:medium) %>" /> 
		<link rel="image_src" href="<%= 'http://' +  request.host + klu.klu_images.first.image.url(:medium) %>" />
	<% end %>
<% end %>
