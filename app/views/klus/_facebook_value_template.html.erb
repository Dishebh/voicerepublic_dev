<meta property="fb:app_id" content="446344418757421" />

<% if klu.instance_of?(NoKluuu) %>
	<meta property="og:title" content="<%= t('.talk_on_kluuu_with', :name => klu.user.name) %>" /> 
	<meta property="og:description" content="<%= klu.title %>" />  
	<meta property="og:image" content="/images/medium/missing.png" /> 
	<link rel="image_src" href="/images/medium/missing.png" />
<% else %>
	<meta property="og:title" content="<%= t('.talk_on_kluuu_with', :name => klu.user.name) %> <%= klu.title %>" /> 
	<meta property="og:description" content=" <%= klu.description %> " />  
	<% if klu.klu_images.empty? %>
		<meta property="og:image" content="/images/medium/missing.png" /> 
		<link rel="image_src" href="/images/medium/missing.png" />
	<% else %>
		<meta property="og:image" content="<%= klu.klu_images.first.image.path(:medium) %>" /> 
		<link rel="image_src" href="<%= klu.klu_images.first.image.path(:medium) %>" />
	<% end %>
<% end %>
