%html.no-js.start-page{lang: I18n.locale.to_s, 'xmlns:fb' => "http://ogp.me/ns/fb#"}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/

    %title
      = content_for?(:title) ? yield(:title) : t(".title")
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>

    -# XXX: (animate|landing).min.css are manually compiled CSS files
    -# from Nicks project vr-mother. They need to be replaced as soon
    -# as we can compile Foundation 6 ourselves.
    -# Same goes for (libraries|foundation|app).min.js
    %link{href: "/assets/stylesheets/animate.min.css", rel: "stylesheet", type: "text/css"}/
    %link{href: "/assets/stylesheets/landing.min.css", rel: "stylesheet", type: "text/css"}/
    %script{:src => "assets/javascripts/libraries.min.js"}
    -#%script{:src => "assets/javascripts/foundation.min.js"}
    %script{:src => "assets/javascripts/app.min.js"}

    %link{href: "/images/apple-touch-icon.png", rel: "apple-touch-icon"}/
    %link{href: "/images/apple-touch-icon-72x72.png", rel: "apple-touch-icon", sizes: "72x72"}/
    %link{href: "/images/apple-touch-icon-114x114.png", rel: "apple-touch-icon", sizes: "114x114"}/

    -#= stylesheet_link_tag "velvet", media: "all"
    = favicon_link_tag '/favicon.ico'
    = javascript_include_tag "vendor/modernizr"
    = yield :head

  %body{class: "#{controller_name} #{[controller_name, action_name] * '-'}"}
    #topbar-container{"data-sticky-container" => ""}
      #example-menu.top-bar{"data-options" => "marginTop:0", "data-sticky" => ""}
        .top-bar-left
          %ul#branding.menu{"data-dropdown-menu" => ""}
            %li.logo
              %a{:href => "start.html"}
                %img{:src => "/images/logos/vr_red.svg", :width => "60"}/
                %span.show-for-large-up VOICE REPUBLIC
        .top-bar-right
          %ul.dropdown.menu{"data-dropdown-menu" => ""}
            %li.has-submenu.can-hide
              %a{:href => "#"}= t('.listen')
              %ul.submenu.menu.vertical{"data-submenu" => ""}
                %li.drop-title= t('.categories')
                - @categories.each do |label, value, icon|
                  %li
                    %a{:href => "#"}= label
                %li.divider
                -# TODO: Link to these pages in the CMS
                %li
                  %a{:href => "listen.html"}= t('.listen')
                %li
                  %a{:href => "explore.html"}= t('.explore')
            -# TODO: Link to this page in the CMS
            %li.can-hide
              %a{:href => "publish.html"}= t('.publish')
            %li.sign-in.can-hide
              = link_to t('.login'), new_user_session_path 
            %li.join.can-hide
              = link_to t('.sign_up'), new_user_registration_path
            %li#search-loupe.can-hide
              %a{:href => "#"}
                %span.icon-uniE7E9
          .search-container.hide
            %form
              %label
                %span.icon-uniE7E9
              %input#search-field.search{:placeholder => t('.search_placeholder'), :type => "text", :value => ""}/
            %button#search-close.close-button{:type => "button"}
              %span{"aria-hidden" => "true"} Ã—

    = render 'shared/notice_or_error_velvet'
    = yield
    = render 'shared/footer_velvet'
    .icons
      = File.read('app/assets/images/icons.svg').html_safe

    #scripts
      = javascript_include_tag "velvet"
      - if Rails.env.production?
        - unless @current_user.try(:insider?)
          = render 'shared/google_analytics'
        = render 'shared/tawk'
      = yield :javascript
