<div class="page-header">
<h2>KluuU-User</h2>
</div>

<table class="table table-striped table-condensed">
	<thead>
	<tr>
		<th>#</th><th>Name</th><th>email</th><th>since</th><th>action</th>
	</tr>
	</thead>
	<tbody>
	<% @users.each do |user| %>
	<tr>
		<td><%= user.id %><% if user.has_role?(:admin)%> <i class="icon-certificate"> </i><% end %></td>
		<td><%= user.name %></td>
		<td><%= user.email %></td>
		<td><%= user.created_at.strftime("%d.%m.%y")%></td>
		<td>	
			<%= link_to admin_user_path(:id => user.id), :method => :delete, :class => "btn btn-danger" do %>
				<i class="icon-trash"> </i> delete
			<% end %>
			<%= link_to admin_user_path(:id => user.id), :class => "btn btn-primary" do %>
				<i class="icon-eye-open"> </i> show
			<% end %>
		</td>
	</tr>
	<% end %>
	</tbody>
</table>

<div class="pull-right">
<%= will_paginate @users, :renderer => BootstrapPagination::Rails, :class => "pagination pagination-centered" %>
</div>

<p>Find me in app/views/admin/users/index.html.erb</p>
