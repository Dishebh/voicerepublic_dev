- content_for :title do
  = t('.title', title: @series.title)

= simple_form_for @series do |f|
  = render partial: 'fields', locals: { f: f, form_title: t(".edit_series") }

  .form-save-row.row
    .medium-12.columns
      = link_to t('helpers.links.cancel'), :back, class: 'button-cancel right'
      = f.button :submit, class: 'button-save right'
      = link_to t('.delete_series'), @series, delete_params
