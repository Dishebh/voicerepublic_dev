.form-top-box.row
  .medium-12.columns

    .title-box
      %h2.form-title= form_title

    .row
      .medium-12.columns
        .image-box(style="background-image: url(#{@series.image.url})" data-show-upload="#series_image")
          %button.button-standard(type="button" data-trigger-file-input="#series_image")
            = t('.select_image')
          = f.file_field :image, class: 'soft-hide'

        = f.input :title, placeholder: t('.title')
        = f.input :teaser, rows: 2, placeholder: t('.teaser')

    .row
      .medium-12.columns
        -#= f.input :tag_list, input_html: { class: "tagList" }, placeholder: t('.tag_list')
        -#%br
        = f.input :description, input_html: { rows: 10 }
