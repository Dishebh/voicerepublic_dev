<% @video_session = build_video_session(current_user) %>
<% the_url = @video_session.new_record? ? video_sessions_path() : video_sessions_path(:id => @video_session ) %>
<% method = @video_session.new_record? ? :post : :put %>
<%= form_for [@video_session.], :as => :video_session,  :url => the_url, :method => method, :html => { :class => 'form-horizontal' }  do |f| %>
	<%= f.hidden_field :calling_user_id, :value => current_user.nil? ? session['session_id'] : current_user.id %>					<form action=""><button class="btn"><%= t('.call_now') %></button></form>
	<%= f.submit :value => t('.call_now'), :class => 'btn', :disable_with => t('.dispatching_call') %>
<% end %>
						