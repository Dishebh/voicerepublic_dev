<%= form_for user, :html => { :class => 'form-horizontal' } do |f| %>
<div class="control-group">
  	<%= f.label :password, :class => 'control-label' %>
  	<div class="controls">
  		<%= f.password_field :password, :class => 'password_field' %>
  	</div>
  </div>
  
  <div class="control-group">
  	<%= f.label :password_confirmation, :class => 'control-label' %>
  	<div class='controls'>
  		<%= f.password_field :password_confirmation, :class => 'password_field' %>
  	</div>
  </div>

 <div class="form-actions">
    <%= f.submit t('.update_password', :default => 'update password'), :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                preferences_show_user_account_path, :class => 'btn' %>
  </div>
<% end %>