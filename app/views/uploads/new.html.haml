= javascript_include_tag 'sencha'

- content_for :title do
  = t('.title')

- opts = { 'ng-controller' => 'UploadController', name: "talkForm", novalidate: false}
= simple_form_for(@talk, url: uploads_path, html: opts) do |f|
  = render partial: "fields", locals: { f: f }

  .form-save-row.row
    .medium-12.columns
      = link_to t('helpers.links.cancel'), :back, class: 'button-cancel right'
      = f.button :submit, class: 'button-save right', 'ng-disabled' => '!talkForm.$valid', 'ng-click' => 'deactivateSafetynet()'
      .eagle.right(style='margin: 9px')
        %i.icon-info
        = t('.billing_notice')
