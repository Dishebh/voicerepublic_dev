

<% publish_to "/notifications/#{@chat.my_partner(current_user).id}" do %>
  $('<%= escape_javascript( render( :partial => 'chats/single_chat_message', :locals => { :chat => @chat, :partner => current_user }) ) %>').appendTo("#<%= @chat.css_id_for_chat %>").hide().fadeIn("slow", function(){
    $("#<%= @chat.css_id_for_chat %>").get(0).scrollTop = $("#<%= @chat.css_id_for_chat %>").get(0).scrollHeight;
  });
