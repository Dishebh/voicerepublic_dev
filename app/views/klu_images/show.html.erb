<%- model_class = KluImage -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human %></h2>
</div>

<%= image_tag @klu_image.image.url(:large), :class => 'img-polaroid' %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @klu_image.description %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              user_klu_path(:user_id => @klu_image.kluuu.user, :id => @klu_image.kluuu), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_klu_klu_image_path(:user_id => @klu_image.kluuu.user, :klu_id => @klu_image.kluuu, :id => @klu_image), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_klu_klu_image_path(:user_id => @klu_image.kluuu.user, :klu_id => @klu_image.kluuu, :id => @klu_image),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
