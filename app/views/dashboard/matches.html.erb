<nav class="dashboard-matches-new-content">
	<ul class="clearfix">
		<li>
			<%= link_to new_user_klu_path(:user_id => @user, :klu_type => "Kluuu"), :title => "Create KluuU", :class => 'btn btn-small' do %>
				neues ! KluuU
			<% end %>
		</li>
		<li>
			<%= link_to new_user_klu_path( :user_id => @user), :title => "New Question", :class => 'btn btn-small' do %>
				neue ? Question
			<% end %>
		</li>						
	</ul>
</nav>
<div class="tab-content dashboard-matches">
	<h4 class="no-margin dashboard-matches-headlines-my-kluuus"><%= t('.my_kluuus', :default => 'Meine KluuUs') %></h4>
	<h4 class="no-margin dashboard-matches-headlines-matches"><%= t('.matches_to_my_') %><%= klu_type_string(@matched_klu) %></h4>
	<div class="tabbable tabs-left">
			<ul class="nav nav-tabs dashboard-matches-own-klus">
		  	<!-- jetzt zwei arrays: @klus und @no_klus -->
			<% @klus.each do |k| %>
				<% if current_page?(dashboard_matches_path(:id => @matched_klu)) && k == @matched_klu  %>
					<li class="active">
				<% else %>
					<li>
				<% end %>
				<%= link_to(dashboard_matches_path(:id => k.id), :title => k.title) do %>
					<%= render(:partial => "klus/tiny_kluuu", :locals => { :klu => k }) %>
				<% end %>	
					<aside>
						<%= link_to( klu_path(:id => k), :class => "matches-view-link", :title => t('.view', :default => "view")) do %>
							<i class="icon-eye-open"></i><%= t('.view') %>
						<% end %>
					</aside>
				</li>
			<% end %>
			<% @no_klus.each do |k| %>
				<% if current_page?(dashboard_matches_path(:id => @matched_klu)) && k == @matched_klu  %>
					<li class="active">
				<% else %>
					<li>
				<% end %>
				<%= link_to(dashboard_matches_path(:id => k.id), :title => k.title) do %>
					<%= render(:partial => "klus/tiny_no_kluuu", :locals => { :klu => k }) %>
				<% end %>	
					<aside>
						<%= link_to( klu_path(:id => k), :class => "matches-view-link", :title => t('.view', :default => "view")) do %>
							<i class="icon-eye-open"></i><%= t('.view') %>
						<% end %>
					</aside>
				</li>
			<% end %>
			</ul>
		<div class="tab-content">
			<div class="clearfix">
				<% @matching_klus.each do |k| %>
					<%= partial_for_klu(k,:medium) %>
				<% end unless @matching_klus.nil? %>
			</div>
		</div>
	</div>
</div>

	<%= render(:partial => "inline_help/dashboard_matches_matches") unless @user.account(true).prefs.no_initial_help == '1' %>
	<%= render( :partial => "inline_help/dashboard_matches_first_kluuu", :locals => {:user => @user} ) unless @user.account(true).prefs.no_initial_help == '1' %>	
	<%= render( :partial =>  "inline_help/dashboard_matches_finances", :locals => {:user => @user})  unless @user.account(true).prefs.no_initial_help == '1' %>	
