<div class="page-header">
	<h1>Dashboard</h1>
</div>

<ul class="nav nav-tabs">
	<li>
		<%= link_to(t('.matches'), dashboard_matches_path )%>
	</li>
	<li>
		<%= link_to(t('.news'), dashboard_news_path) %>
	</li>
	<li>
		<%= link_to(t('.bookmarks'), dashboard_bookmarks_path) %>
	</li>
	<li>
		<%= link_to(t('.contacts'), dashboard_contacts_path ) %>
	</li>
	<li class="active">
		<%= link_to(t('.settings'), dashboard_settings_path) %>
	</li>
</ul>

<div class="tab-content row-fluid"> 
	<div class="well well-large span6">
		<dl>
			<dt>
				<%= t('.configured_email') %>
			</dt>
			<dd>
				<%= @user.email %>
			</dd>
		</dl>
		<%= link_to(t('.edit_password'), dashboard_settings_edit_password_path ) %>
	</div>
	<div class="well well-large span6">
		<dl>
			<dt><%= t('.get_email_if_actions_on_my_kluuus')%></dt>
			<dd><%= @user.account.prefs.email_concerning_me == '1' ? t('.yes') : t('.no') %></dd>
			<dt><%= t('.get_news_on_actions_of_fiends')%></dt>
			<dd><%= @user.account.prefs.inform_of_friends == '1' ? t('.yes') : t('.no') %></dd>
			<dt><%= t('.get_email_if_actions_of_friends')%></dt>
			<dd><%= @user.account.prefs.email_concerning_other == '1' ? t('.yes') : t('.no') %></dd>
		</dl>
	</div>
	<div class="form-actions">
		<%= link_to( t('.edit_preferences'), dashboard_settings_edit_path, :class => "btn btn-primary") %>
	</div>
</div>