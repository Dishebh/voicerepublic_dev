- content_for :title do
  = t('.settings', :default => 'settings')
  \&middot; #{@user.name}
.center
  .user.user-edit.well.well-large
    %h3= t('.email')
    = render :partial => 'users/basic_form', :locals => { :user => @user, :url_arg => 'from_settings' }
  .well.well-large.edit-password
    %h3= t('.new_password')
    = render :partial => 'users/password_form', :locals => { :user => @user , :url_arg => 'from_settings'}

-#    
  .user.user-edit.well.well-large
    %h3= t(".notifications_and_emails")
    = render :partial => 'accounts/form_preferences', :locals => { :user => @user, :account => @account, :url_arg => 'from_settings' }
