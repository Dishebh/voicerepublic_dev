- content_for :head do
  = rss_link_tag t('.feed_title')

#main{:role => "main"}
  %section#claim.dark
    .row
      %header
        %h1=t('.title')
      .container
        %p.lead
          = t('.lead')
          - @categories.each do |label, value, icon|
            - delim = (label == @categories.last.first) ? '.' : ','
            = succeed delim do
              = link_to label, explore_path(filter: {category: value})
        .claim-cta-half
          -# TODO: Link to pages in CMS
          -#   %a{:href => "publish.html"}
          -#     %button{:href => "#"}
          -#       .icon.megaphone
          -#       = t('.publish')
          -# .claim-cta-half
          -#   %a{:href => "listen.html"}
          -#     %button
          -#       .icon.headphones
          -#       = t('.listen')

  %section#listen-now.light
    .row
      %h2= t('.listen_now')
      - unless @talks_featured.empty?
        #talk-teasers
          - @talks_featured.each do |talk|
            = render partial: 'shared/talk_card', locals: { talk: talk }

    .listen-interstitial
      %p.lead= t('.lead_interstitial')
      .category-buttons
        - @categories.each do |label, value, icon|
          = link_to content_tag(:span, nil, class: ['icon', icon]) + label,
              explore_path(filter: {category: value}), class: 'button'

    #talk-collection
      - @talks_popular.each do |talk|
        = render partial: 'shared/talk_card', locals: { talk: talk }
  .row
    = link_to explore_path do
      %button= t('.more_talks')

  %section#coming-up.blue
    .row
      .container
        %h2 Coming Up Live
      #talk-collection
        .talk-card
          .talk-card-inside
            %h5.title Der Deichgraf Peter Lafrenz
            .image-box
              %img{:alt => "", :src => "img/thumbs-cropped/thumb8.jpg"}/
              .hover-info
                %p.speaker
                  Sprecher/In:
                  %a{:href => "profile.html"} Patrick Frank
            .bottom-info
              .icon.politics
              .info-right
                %p.date 19:00 today
                %a{:href => "profile.html"}
                  %p.publisher Henrik Lafrenz
        .talk-card
          .talk-card-inside
            %h5.title Playful Oasis - An indie collective story
            .image-box
              %img{:alt => "", :src => "img/thumbs-cropped/thumb9.jpg"}/
              .hover-info
