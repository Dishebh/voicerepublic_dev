<%= form_for account, :url => user_account_path(:user_id => user, url_arg => 1), :html => { :multipart => true } do |f| %>
	<%= f.fields_for :prefs, account.prefs do |p| %>
	
	<!-- 
	<div class="control-group">
		<div class="controls">
			<%= label_tag "inform_of_friends", :class => 'checkbox control-label' do %>
				<%= p.check_box :inform_of_friends, :class => 'check_box' %>
				<%= t('.get_notifications_contacts_activities', :default => "Erhalte Nachrichten auf KluuU über die Aktivitäten Deiner Kontakte") %>
			<% end %>
		</div>
	</div>
	-->
	<div class="control-group">
		<div class="controls">
			<%= label_tag "email_concerning_other", :class => 'checkbox control-label' do %>
				<%= p.check_box :email_concerning_other %>
				<%= t('.emails_about_contact_activities', :default => "Erhalte E-Mails über die Aktivitäten Deiner Kontakte") %>
			<% end %>
		</div>
	</div>
	
	<div class="control-group">
		<div class="controls">
			<%= label_tag "email_concerning_me", :class => 'checkbox control-label' do %>
				<%= p.check_box :email_concerning_me %>
				<%= t('.emails_about_me', :default => "Erhalte E-Mails über Dich") %>
			<% end %>
		</div>
	</div>
	
	<h3><%= t('.call_settings')%></h3>
	
	<div class="control-group">
		<div class="controls">
			<%= label_tag "anonymous_calls", :class => 'checkbox control-label' do %>
				<%= p.check_box :anonymous_calls %>
				<%= t('.allow_anonymous_calls', :default => "Erlaube anonyme Anrufe auf deinen KluuUs oder Fragen") %>
			<% end %>
		</div>
	</div>
	
	<h3><%= t('.on_site_help')%></h3>
	<div class="control-group">
		<div class="controls">
			<%= label_tag "no_initial_help", :class => 'checkbox control-label' do %>
				<%= p.check_box :no_initial_help %>
				<%= t('.dont_show_initial_help', :default => "Verstecke die Hilfe-Notizen") %>
			<% end %>
		</div>
	</div>
	
	<br>
	<div class="control-group">
		<%= f.submit t('.save_preferences', :default => 'Einstellungen speichern'), :class => 'btn btn-primary' %>
	</div>
	<% end %>

<% end %>

