<article class="message contribution">
	<header>
		<div class="contribution-user-name">
			<%= link_to message.sender.name, user_path(:id => message.sender) %>
		</div>
		
		<%= link_to(image_tag(message.sender.account.portrait(:thumb)), user_path(:id => message.sender),:class => "img-polaroid contribution-user-image")%>
		<time datetime="<%= message.created_at.strftime("%Y-%m-%d") %>">
			<%= time_ago_in_words(message.created_at) %>
		</time>
	</header>
	<%= simple_format(message.content) %>
	<aside>
		
		<%= link_to(new_message_path(:receiver_id => message.sender), :class => "contribution-reply") do %>
			<i class="icon-envelope"> </i> <%#= t('.reply') %>
		<% end %>
		<%= link_to(user_message_path(:user_id => message.receiver, :id => message), :method => :delete, :class => "contribution-delete") do %>
		<i class="icon-trash"> </i> <%#= t('.delete')%>
		<% end %>

	</aside>
</article>