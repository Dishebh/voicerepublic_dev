<div class="well well-small">
	<span class="pull-right">
		<%= link_to(new_message_path(:receiver_id => message.sender)) do %>
			<i class="icon-envelope"> </i> <%= t('.reply') %>
		<% end %>&nbsp; |
		<%= link_to(user_message_path(:user_id => message.receiver, :id => message), :method => :delete) do %>
		<i class="icon-trash"> </i>
		<% end %>
	</span>
	<%= link_to(image_tag(message.sender.account.portrait(:thumb)), user_path(:id => message.sender),:class => "img-polaroid")%>
	<blockquote>
	<small><%= message.sender.name %> <%= t('.wrote') %> <%= time_ago_in_words(message.created_at) %></small>
	<%= simple_format(message.content) %>
	</blockquote>
</div>
