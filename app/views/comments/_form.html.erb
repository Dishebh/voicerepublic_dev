<%= form_tag user_status_update_comments_url(:user_id => @user, :status_update_id => @status_update ) do %>

<%= error_message_on @comment, :content %>

<div class="control-group">
	<%= label_tag t('.your_comment', :default => "comment"),nil,  :class => 'control-label'  %>
	<div class="controls">
		<%= text_area_tag 'comment[content]',nil, :class => 'text_area', :rows => 2 %>
	</div>
</div>

<div>
	<%= submit_tag nil, :class => 'btn btn-primary' %>
	<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
	user_status_update_path(:user_id => @user.id, :id => @status_update), :class => 'btn' %>
</div>
<% end %>
